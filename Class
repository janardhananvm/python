##Method template

class saree:
    info = "There are wide variety of sarees in which Sungudi is best"

    def __init__(self, name):
        print(random.randint(1,304))
        print(name)
        self.name = name;
        self.lucky_number = random.randint(1,304)

    def options(self, sareetype):
        print("Tissue / Sungudi")
        print(f"Saree name {sareetype}")
        
    def area(self):
        print(self.height)
        return self.height * self.height


saree1 = saree("test")

saree1.options("linen")

saree1.height = 10

saree1.area()
